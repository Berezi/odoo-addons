<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_medical_record"
                    icon="fa-clipboard"
                    attrs="{'invisible':[('partner_medical_record_ids', '=', False)]}"
                >
                    <span>
                        Consult
                    </span>
                </button>
            </div>
            <notebook position="inside">
                <page string="Medical record numbers" name="medical_record_numbers">
                    <field name="partner_medical_record_ids">
                        <tree editable="top" default_order='number desc'>
                            <field name="number"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
